{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "jsx": "react",
    "strictNullChecks": false,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
